<div class='container'>
      <form action='/users/contact' method="POST">
          <div class="form-group">
            <label for="exampleFormControlInput1">Please enter your email address</label>
            <input type="email" name='email' class="form-control" id="exampleFormControlInput1" style='width:50%' placeholder="name@example.com">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else :)</small>
          </div>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">How can we help?</label>
            <textarea class="form-control" name='text' id="exampleFormControlTextarea1" style='width:50%' rows="3"></textarea>
          </div>
          <div class='form-group'>
                <button type="submit" class="btn btn-primary">Submit</button>
          </div>
      </form>
</div>
<hr>